<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/main_LOTT_anim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:scaleX="2"
        android:scaleY="2"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/confetti"
        app:lottie_speed="1" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="vertical"

    >

    <TextView
        android:id="@+id/main_TXT_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:text="Hack Me, If You Can"
        android:textColor="@color/purple_500"/>

<EditText
    android:id="@+id/main_EDT_pass"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"

    android:textSize="20sp"
    android:hint="password"
    />

    <Button
        android:id="@+id/main_BTN_login"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        />

    <TextView
        android:id="@+id/main_TXT_compass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:text="79875"
        android:textColor="@color/purple_500"/>

    <CheckBox
        android:id="@+id/main_CHCK_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PassHint: start with Delta Omega Romeo &amp;&amp; 123x2"
        android:clickable="false"/>

    <CheckBox
        android:id="@+id/main_CHCK_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This app is Created by 'WIFI_Name'"
        android:clickable="false"/>

    <CheckBox
        android:id="@+id/main_CHCK_darkmode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn The Lights Down"
        android:clickable="false"/>

    <CheckBox
        android:id="@+id/main_CHCK_evenday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2'sday"
        android:clickable="false"/>

    <CheckBox
        android:id="@+id/main_CHCK_jerusalem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Face the Holy of Holies"
        android:clickable="false"/>

    <CheckBox
        android:id="@+id/main_CHCK_Battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take The Energy and % by 5 = zero"
        android:clickable="false"/>

</LinearLayout>


</RelativeLayout>